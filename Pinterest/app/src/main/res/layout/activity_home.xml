<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".HomeActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:background="@drawable/round_corner"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/menu1" />

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <Button
        android:id="@+id/mix"
        android:layout_width="182dp"
        android:layout_height="85dp"
        android:backgroundTint="#ffffff"
        android:text="Mixture"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/space"
        android:layout_width="182dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#ffffff"
        android:text="Space"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/books"
        android:layout_width="182dp"
        android:layout_height="85dp"
        android:layout_below="@+id/space"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#ffffff"
        android:text="Books"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/food"
        android:layout_width="182dp"
        android:layout_height="85dp"
        android:layout_below="@+id/books"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#ffffff"
        android:text="Food"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/wallpaper"
        android:layout_width="182dp"
        android:layout_height="85dp"
        android:layout_below="@+id/food"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#ffffff"
        android:text="Wallpapers"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/flower"
        android:layout_width="182dp"
        android:layout_height="85dp"
        android:layout_below="@+id/wallpaper"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#ffffff"
        android:text="Flowers"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sea"
        android:layout_width="182dp"
        android:layout_height="85dp"
        android:layout_below="@+id/flower"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="#ffffff"
        android:text="Seaside"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/actors"
        android:layout_width="182dp"
        android:layout_height="85dp"
        android:layout_below="@+id/animals"
        android:layout_marginTop="1dp"
        android:backgroundTint="#ffffff"
        android:text="Actors"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/animals"
        android:layout_width="182dp"
        android:layout_height="85dp"
        android:layout_below="@+id/mix"
        android:layout_marginTop="2dp"
        android:backgroundTint="#ffffff"
        android:text="Animals"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/decore"
        android:layout_width="182dp"
        android:layout_height="85dp"
        android:layout_below="@+id/actors"
        android:layout_marginTop="2dp"
        android:backgroundTint="#ffffff"
        android:text="Decoration"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/anemi"
        android:layout_width="182dp"
        android:layout_height="85dp"
        android:layout_below="@+id/decore"
        android:layout_marginTop="1dp"
        android:backgroundTint="#ffffff"
        android:text="Animation"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/disney"
        android:layout_width="182dp"
        android:layout_height="85dp"
        android:layout_below="@+id/anemi"
        android:layout_marginTop="1dp"
        android:backgroundTint="#ffffff"
        android:text="Disney"
        android:textColor="@color/black"
        android:textSize="20sp"/>


</RelativeLayout>